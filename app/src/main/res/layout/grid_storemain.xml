<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:id="@+id/cvStoreProduct"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="3dp">
    <com.infinite.chickypic.view.SquareRelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="4dp"
            android:textSize="@dimen/description_textsize"
            android:textColor="@color/grey_text"
            android:layout_alignParentBottom="true"
            android:id="@+id/tvStoreMainPrice"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_23"
            />
        <TextView
            android:textSize="@dimen/description_textsize"
            android:textColor="@color/grey_text"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tvStoreMainPrice"
            android:id="@+id/tvStoreMainProductName"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp" />
        <com.infinite.chickypic.view.ObliqueTextView
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/grey_text"
            android:id="@+id/tvStoreMainPriceSmall"
            android:textSize="@dimen/description_textsize_small"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_23" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/test2"
            android:layout_above="@+id/tvStoreMainProductName"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.infinite.chickypic.view.SquareRelativeLayout>
</android.support.v7.widget.CardView>